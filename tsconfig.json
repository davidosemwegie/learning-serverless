{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"target": "es6",
		"moduleResolution": "node",
		"baseUrl": ".",
		"outDir": "dist",
		"paths": {
			"*": ["*", "node_modules/*", "src/*", "/functions/*"]
		}
	},
	"include": ["src/**/*", "functions/**/*"]
}
